<%- include('../partials/header'); -%>

<div class="container">

<form action="/problemset/newPb" method="POST" class="my-4 p-2 bg-light rounded">
    <p>Add new problem</p>
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="problem[name]">
    </div>
    <div class="form-group">
        <label>Author</label>
        <input type="text" class="form-control" name="problem[author]">
    </div>
    <div class="form-group">
        <label>HTML Content of problem</label>
        <textarea name="problem[content]" rows="15" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Time limit (seconds)</label>
        <input type="text" class="form-control" name="problem[timeLimit]">
    </div>
    <div class="form-group">
        <label>Memory limit (MB)</label>
        <input type="text" class="form-control" name="problem[memoryLimit]">
    </div>
    
    <button type="submit" class="btn btn-dark">Submit</button>
</form>

</div>

<%- include('../partials/footer'); -%>