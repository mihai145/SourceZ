                </div>
                <button type="submit" class="btn btn-dark">Add post</button>
            </form>
            <% } %> -->

            <% if(user && isLoggedIn) { %>
            <div class="card my-profile-card my-2 p-2">
                <img class="card-img-top profilePicture mx-auto" src="https://helloclean.ro/wp-content/uploads/2014/10/no-profile-square.gif" 
                alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title text-center">User <%= user.username %></h5>
                    <a href="/me" class="btn btn-dark btn-block needSmallerButton m-1">View profile</a>
                    
                    <% if(user.isAdmin) { %>
                        <a href="/posts/new" class="btn btn-dark btn-block needSmallerButton m-1">Add new post</a>
                    <% } %>
                </div>
            </div>
            <% } %>

            <% if(topUsers && topUsers.length > 0) { %>
                <table class="d-none d-lg-inline table feed-table-bg">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">User</th>
                            <th scope="col">Rating</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < topUsers.length; i++) { %>
                        <tr>
                            <th scope="row"><%= i + 1 %></th>
                            <td><%= topUsers[i].username %></td>
                            <td><%= topUsers[i].rating %></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            <% } %>

        </div>

    </div>

</div>

