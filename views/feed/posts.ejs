<%- include('../partials/header'); -%>

<div class="container">

    <div class="row">
    
        <div class="col-lg-8 col-xl-9 order-2 order-lg-1">
                <div class="jumbotron my-4">
                    <h1 class="display-4">Buna seara prieteni!</h1>
                    
                    <p class="lead">
                        Suntem basic, am pus aici un jumbotron pentru ca momentan nu avem asa multe postari...
                        <br> 
                        Speram sa scapam in curand de el
                    </p>
                    
                    <hr class="my-4">
                    
                    <p>
                        Enjoy :)
                    </p>

                </div>

                <% if(posts) { %>
                <% for(let post of posts) { %>
                    <div class="card my-3">
                        <div class="card-body bg-light">
                            <h5 class="card-title">
                                <%= post.title %>
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">by <%= post.author %> </h6>
                            <p class="card-text my-2">
                                <% if(post.text.length < 200) { %>
                                    <%= post.text %>
                                <% } else { %>
                                    <%= post.text.substring(0, 200) %>...
                                <% } %>
                                
                            </p>

                            <div>
                                <small>
                                    <% if(post.comments.length != 1) { %>
                                        <%= post.comments.length %> <em>comments</em>,
                                    <% } else { %>
                                        1 <em>comment</em>,
                                    <% } %>

                                    <% if(post.codepreciations != 1) { %>
                                        <%= post.codepreciations %> <em>codepreciations</em>.
                                    <% } else { %>
                                        1 <em>codepreciation</em>.
                                    <% } %>
                                </small>
                            </div>

                        </div>

